@model WebApplication1.Areas.ModulKorisnik.ViewModels.Obavijest.ObavijestIndexVM
@{
    ViewData["Title"] = "Obavijest";
    int br = 0;
}

<div class="row">
    <div class="x_panel">
        <div class="x_title">
            <h2>Obavijesti</h2>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <table id="datatable" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>RB</th>
                        <th>Naziv</th>
                        <th>Sadržaj</th>
                        <th>Datum</th>
                        <th>Objavio</th>
                    </tr>
                </thead>
                <tbody>
                    @{ foreach (var o in Model.Rows)
                        {
                            <tr>
                                @{
                                    br++;
                                }
                                <td>@br</td>
                                <td>@o.Naziv</td>
                                <td>@o.Sadrzaj</td>
                                <td>@o.Datum</td>
                                <td>@o.ImePrezime</td>                                
                            </tr>
                        }
                    }
                </tbody>

            </table>
        </div>      
    </div>



</div>
