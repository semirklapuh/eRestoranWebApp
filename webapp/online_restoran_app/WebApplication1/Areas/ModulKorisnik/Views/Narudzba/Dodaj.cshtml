@model WebApplication1.Areas.ModulKorisnik.ViewModels.Narudzba.NaruzbaDodajVM
@{
    ViewData["Title"] = "Dodaj";
}



<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Potvrdite podatke za narudzbu</h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                    <li>
                        <a class="close-link"><i class="fa fa-close"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <br />
                <form asp-area="ModulKorisnik" asp-controller="Narudzba" asp-action="DodajSave" method="post" id="demo-form2" data-parsley-validate class="form-horizontal form-label-left">
                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" asp-for="ImePrezime">
                            Ime i prezime:
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <input asp-for="ImePrezime" autofocus class="form-control" readonly />
                        </div>

                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" asp-for="Adresa">
                            Adresa:
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <input asp-for="Adresa" class="form-control" readonly />

                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" asp-for="DatumNarudzbe">
                            Datum narudzbe:
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <input asp-for="DatumNarudzbe" class="form-control" readonly />


                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" asp-for="Telefon">
                            Telefon:
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <input asp-for="Telefon" class="form-control" readonly />

                        </div>

                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" asp-for="StatusDostave">
                            Status dostave:
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <input asp-for="StatusDostave" class="form-control" readonly />



                        </div>

                    </div>



                    <input asp-for="NarucilacId" type="hidden" />
                    <input asp-for="SatusDostaveId" type="hidden" />

                    <div class="form-group">
                        <div class="col-md-9  text-right">

                            <button type="submit" class="btn btn-success">Potvrdi</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>