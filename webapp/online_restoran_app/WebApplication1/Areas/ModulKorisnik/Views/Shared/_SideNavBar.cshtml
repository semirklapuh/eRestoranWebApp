@using WebApplication1.Helper
@using WebApplication1.Models
@using Microsoft.AspNetCore.Http


@{
    KorisnickiNalog korisnik = Context.GetLogiraniKorisnik();
  
}

<div class="col-md-3 left_col">
    <div class="left_col scroll-view">
        <div class="navbar nav_title" style="border: 0;">
            <a asp-controller="Home" asp-action="Index" class="site_title"><i class="fas fa-hamburger"></i> <span>eRestoran</span></a>
        </div>

        <div class="clearfix"></div>

        <!-- menu profile quick info -->
        <div class="profile clearfix">
            <div class="profile_info">
                <span>Dobro došao,</span>
                <h2>@korisnik.KorisnickoIme</h2>
            </div>
        </div>
        <!-- /menu profile quick info -->

        <br />

        <!-- sidebar menu -->
        <div id="sidebar-menu" class="main_menu_side hidden-print main_menu">
            <div class="menu_section">
                <ul class="nav side-menu">
                    <li>
                        <a asp-controller="Home" asp-action="Index"><i class="fa fa-home" aria-hidden="true"></i> Početna</a>
                    </li>

                    <li>
                        <a><i class="fa fa-pie-chart"></i> Jela <span class="fa fa-chevron-down"></span></a>
                        <ul class="nav child_menu">
                            <li><a asp-controller="Jelo" asp-action="Index">Prikazi</a></li>
                            <li><a asp-controller="Narudzba" asp-action="Index">Dodaj narudzbu</a></li>

                        </ul>
                    </li>
                    <li>
                        <a><i class="fa fa-user"></i> Profil <span class="fa fa-chevron-down"></span></a>
                        <ul class="nav child_menu">
                            <li><a asp-controller="Narucilac" asp-route-KorisnikId="@korisnik.Id" asp-action="Index">Prikazi</a></li>
                            

                        </ul>
                    </li>
                    <li>
                        <a><i class="fa fa-phone"></i> Kontakt <span class="fa fa-chevron-down"></span></a>
                        <ul class="nav child_menu">
                            <li><a asp-controller="Zaposlenik" asp-action="List">Prikazi</a></li>
                            <li><a asp-controller="Zaposlenik" asp-action="Dodaj">Dodaj</a></li>
                        </ul>
                    </li>

                    


                    <li>
                        <a><i class="fa fa-car"></i> Narudžbe <span class="fa fa-chevron-down"></span></a>
                        <ul class="nav child_menu">
                            <li><a asp-controller="Narudzba" asp-action="Index">Prikazi</a></li>
                        </ul>
                    </li>
                    <li>
                        <a><i class="fa fa-calendar"></i> Rezervacije <span class="fa fa-chevron-down"></span></a>
                        <ul class="nav child_menu">
                            <li><a asp-controller="Rezervacija" asp-action="Index">Prikazi</a></li>
                            <li><a asp-controller="Rezervacija" asp-route-KorisnikId="@korisnik.Id" asp-action="Dodaj">Dodaj</a></li>
                        </ul>
                    </li>

                    <li>
                        <a><i class="fa fa-file-text-o"></i> Obavijesti <span class="fa fa-chevron-down"></span></a>
                        <ul class="nav child_menu">
                            <li><a asp-controller="Obavijest" asp-action="Index">Prikazi</a></li>                           
                        </ul>
                    </li>

                    


                </ul>
            </div>


        </div>
        <!-- /sidebar menu -->
        <!-- /menu footer buttons -->
        <div class="clearfix"></div>
        <div class="sidebar-footer hidden-small">
            <a data-toggle="tooltip" href="~/Autentifikacija/Logout" data-placement="top" style="width:100%;" title="Odjava">
                <span class="glyphicon glyphicon-off" aria-hidden="true"></span>
            </a>
        </div>
        <!-- /menu footer buttons -->

    </div>
</div>