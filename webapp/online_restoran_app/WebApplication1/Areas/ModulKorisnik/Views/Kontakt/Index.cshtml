@model WebApplication1.Areas.ModulKorisnik.ViewModels.Kontakt.KontaktIndexVM


<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Posaljite email</h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                    <li>
                        <a class="close-link"><i class="fa fa-close"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <br />
                <form asp-area="ModulKorisnik" asp-controller="Kontakt" asp-action="Posalji" method="post" id="demo-form2" data-parsley-validate class="form-horizontal form-label-left">
                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" asp-for="Narucilac">
                            Ime i prezime:
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <input asp-for="Narucilac" autofocus class="form-control" readonly />
                        </div>

                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" asp-for="Email">
                            Email:
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <input asp-for="Email" class="form-control" readonly />
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" asp-for="Poruka">
                            Poruka:
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            @*<input asp-for="Poruka" class="form-control" />*@
                            <textarea asp-for="Poruka" class="form-control"></textarea>
                        </div>
                    </div>



                    <div class="form-group">
                        <div class="col-md-9  text-right">
                            <button type="reset" class="btn btn-primary">Resetiraj</button>
                            <button type="submit" onclick="alert('Poruka je poslana!')" class="btn btn-success">Posalji</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


