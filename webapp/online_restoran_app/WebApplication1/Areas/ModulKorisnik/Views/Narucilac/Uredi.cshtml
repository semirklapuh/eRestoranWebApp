@model WebApplication1.Areas.ModulKorisnik.ViewModels.Narucilac.NarucilacUrediVM



<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Uredite vas profil</h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                    <li>
                        <a class="close-link"><i class="fa fa-close"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <br />
                <form asp-area="ModulKorisnik" asp-controller="Narucilac" asp-action="UrediSave" method="post" id="demo-form2" data-parsley-validate class="form-horizontal form-label-left">
                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" asp-for="ImePrezime">
                            Ime i prezime:
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <input asp-for="ImePrezime" autofocus class="form-control" />
                            <span asp-validation-for="ImePrezime"></span>
                        </div>

                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" asp-for="KorisnickoIme">
                            Korisničko ime:
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <input asp-for="KorisnickoIme" class="form-control" />
                            <span asp-validation-for="KorisnickoIme"></span>

                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" asp-for="Lozinka">
                            Lozinka:
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <input asp-for="Lozinka" class="form-control" />
                            <span asp-validation-for="Lozinka"></span>

                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" asp-for="Email">
                            Email:
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <input asp-for="Email" type="email" class="form-control" />

                        </div>

                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" asp-for="Telefon">
                            Telefon:
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <input asp-for="Telefon" class="form-control" />
                            <span asp-validation-for="Telefon"></span>


                        </div>

                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" asp-for="Adresa">
                            Adresa:
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <input asp-for="Adresa" class="form-control" />
                            <span asp-validation-for="Adresa"></span>

                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="Grad">
                            Grad:
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <select asp-for="GradId" asp-items="Model.gradLista" class="form-control">
                                <option value="" disabled hidden selected>(Odaberi grad)</option>
                            </select>
                            <span asp-validation-for="GradId"></span>
                        </div>
                    </div>

                    <input asp-for="NarucilacId" type="hidden" />

                    <div class="form-group">
                        <div class="col-md-9  text-right">
                            <button type="reset" class="btn btn-primary">Resetiraj</button>
                            <button type="submit" class="btn btn-success">Uredi</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>