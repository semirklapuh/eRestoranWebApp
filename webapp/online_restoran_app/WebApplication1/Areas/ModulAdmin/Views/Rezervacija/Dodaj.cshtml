@model WebApplication1.Areas.ModulAdmin.ViewModels.Rezervacija.RezervacijaDodajVM
@{
    ViewData["Title"] = "DodajForm";
}
<style>
    .slidecontainer {
        width: 100%;
    }

    .slider {
        -webkit-appearance: none;
        width: 100%;
        height: 25px;
        background: #d3d3d3;
        outline: none;
        opacity: 0.7;
        -webkit-transition: .2s;
        transition: opacity .2s;
    }

        .slider:hover {
            opacity: 1;
        }

        .slider::-webkit-slider-thumb {
            -webkit-appearance: none;
            appearance: none;
            width: 25px;
            height: 25px;
            background: #4CAF50;
            cursor: pointer;
        }

        .slider::-moz-range-thumb {
            width: 25px;
            height: 25px;
            background: #4CAF50;
            cursor: pointer;
        }
</style>
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Dodaj rezervaciju</h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                    <li>
                        <a class="close-link"><i class="fa fa-close"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <br />
                <form asp-area="ModulAdmin" asp-controller="Rezervacija" asp-action="DodajSave" method="post" id="demo-form2" data-parsley-validate class="form-horizontal form-label-left">
                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="Gost">
                            Gost:
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <input type="text" asp-for="NarucilacIme" class="form-control" readonly>

                        </div>
                    </div>
                    <input type="hidden" asp-for="NarucilacId" />
                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" asp-for="DatumRezervacije">
                            Datum rezervacije:
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <input asp-for="DatumRezervacije" type="datetime-local" class="form-control" />

                        </div>

                    </div>

                    <div class="form-group" style="width:auto;">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" asp-for="Naziv">
                            Naziv:
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <input asp-for="Naziv" class="form-control" />
                            <span asp-validation-for="Naziv"></span>

                        </div>

                    </div>



                    <div class="form-group" style="width:auto;">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" asp-for="BrojStolova">
                            Broj mjesta:
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <input type="range" asp-for="BrojStolova" min="1" max="35" class="slider" id="myRange" oninput="showVal(this.value)" onchange="showVal(this.value)" />
                            <p>Broj mjesta: <span id="demo"></span></p>

                        </div>
                    </div>


                    <input asp-for="RezervacijaId" type="hidden" />
                    <input asp-for="DatumEvidencije" type="hidden" />
                    <div class="form-group">
                        <div class="col-md-9 text-right">
                            <button type="reset" class="btn btn-primary">Resetiraj</button>
                            <button type="submit" class="btn btn-success">Potvrdi</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        </div>
    </div>

<script>
    var slider = document.getElementById("myRange");
    var output = document.getElementById("demo");
    output.innerHTML = slider.value;

    slider.oninput = function () {
        output.innerHTML = this.value;
    }
    function showVal(newVal) {
        document.getElementById("demo").innerHTML = newVal;
    }
</script>