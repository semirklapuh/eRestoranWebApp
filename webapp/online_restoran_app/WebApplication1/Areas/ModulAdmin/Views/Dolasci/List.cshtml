@model WebApplication1.Areas.ModulAdmin.ViewModels.Dolasci.DolasciList
@{
    ViewData["Title"] = "Evidencija radnika";
    int br = 0;

}

<div class="row">
    <div class="x_panel">
        <div class="x_title">
            <h2>Evidencija radnika</h2>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <table id="datatable" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>RB</th>
                        <th>Ime i prezime</th>
                        <th>Dolazak</th>
                        <th>Odlazak</th>
                        <td>Sati radili</td>
                        <td>Akcija</td>
                    </tr>
                </thead>
                <tbody>
                    @{ foreach (var d in Model.htmlRows)
                        {
                            <tr>
                                @{
                                    br++;
                                }
                                <td>@br</td>
                                <td>@d.Zaposlenik</td>
                                <td>@d.Dolazak</td>
                                <td>@d.Odlazak</td>
                                <td>@d.SatiRadili</td>
                                <td class="text-center">
                                    @if (d.Odlazak == null)
                                    {

                                        <a asp-controller="Dolasci" asp-action="Zavrsio" asp-route-id="@d.Id" class="btn btn-info btn-xs"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span>  Završio</a>
                                    }
                                </td>
                            </tr>
                        }
                    }
                </tbody>

            </table>
        </div>
        <a asp-controller="Dolasci" asp-action="Dodaj" class="btn btn-primary"> Dodaj novu evidenciju </a>
      
    </div>

</div>

