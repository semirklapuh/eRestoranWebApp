@model WebApplication1.Areas.ModulAdmin.ViewModels.Zaposlenik.ZaposlenikDodajVM
@{
    ViewData["Title"] = "Dodaj zaposlenika";
}

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>Dodaj zaposlenika</h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                    </li>
                    <li>
                        <a class="close-link"><i class="fa fa-close"></i></a>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <br />
                <form asp-area="ModulAdmin" asp-controller="Zaposlenik" asp-action="DodajSave" method="post" id="demo-form2" data-parsley-validate class="form-horizontal form-label-left">
                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" asp-for="Ime">
                            Ime:
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <input asp-for="Ime" class="form-control" />
                            <span asp-validation-for="Ime"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" asp-for="Prezime">
                            Prezime:
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <input asp-for="Prezime" class="form-control" />
                            <span asp-validation-for="Prezime"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" asp-for="DatumRodjenja">
                            Datum rođenja:
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <input asp-for="DatumRodjenja" type="date" class="form-control" />
                            <span asp-validation-for="DatumRodjenja"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" asp-for="JMBG">
                            JMBG:
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <input asp-for="JMBG" class="form-control" />
                            <span asp-validation-for="JMBG"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="Grad">
                            Grad:
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <select asp-for="GradID" asp-items="Model.GradLista" class="form-control">
                                <option value="" disabled hidden selected>(Odaberi grad)</option>
                            </select>
                            <span asp-validation-for="GradID"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" asp-for="Adresa">
                            Adresa:
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <input asp-for="Adresa" class="form-control" />
                            <span asp-validation-for="Adresa"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="RadnoMjesto">
                            Radno Mjesto:
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <select asp-for="RadnoMjestoId" asp-items="Model.RadnoMjestoList" class="form-control">
                                <option value="" disabled hidden selected>(Odaberi radno mjesto)</option>
                            </select>
                            <span asp-validation-for="RadnoMjestoId"></span>
                        </div>

                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" asp-for="Email">
                            Email:
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <input asp-for="Email" type="email" class="form-control" />
                            <span asp-validation-for="Email"></span>

                        </div>

                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" asp-for="Telefon">
                            Telefon:
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <input asp-for="Telefon" class="form-control" />
                            <span asp-validation-for="Telefon"></span>

                        </div>

                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" asp-for="KorisnickoIme">
                            Korisničko ime:
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <input asp-for="KorisnickoIme" class="form-control" />
                            <span asp-validation-for="KorisnickoIme"></span>

                        </div>

                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" asp-for="Lozinka">
                            Lozinka:
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <input asp-for="Lozinka" class="form-control" />
                            <span asp-validation-for="Lozinka"></span>

                        </div>

                    </div>
                    <input asp-for="Id" type="hidden" />

                    <div class="form-group">
                        <div class="col-md-9 text-right">
                            <button type="reset" class="btn btn-primary">Resetiraj</button>
                            <button type="submit" class="btn btn-success">Potvrdi</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        </div>
    </div>


