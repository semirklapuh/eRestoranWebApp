@model WebApplication1.Models.ViewModels.NarucilacDodajVM
@{
    Layout = null;
    ViewData["Title"] = "Dodaj";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Prijava na sistem </title>

    <link rel='stylesheet' href='https://use.fontawesome.com/releases/v5.7.0/css/all.css' integrity='sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ' crossorigin='anonymous'>


    <!-- Bootstrap -->
    <link href="~/vendors/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <!-- NProgress -->
    <link href="~/vendors/nprogress/nprogress.css" rel="stylesheet">
    <!-- Animate.css -->
    <link href="~/vendors/animate.css/animate.min.css" rel="stylesheet">


    <!-- Custom Theme Style -->
    <link href="~/build/css/custom.min.css" rel="stylesheet">
</head>

<body class="login">
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div>
                <br />
                <br />
                <br />
                <center><h1>Registriraj se</h1></center>
                <br />
                <br />
                <div class="x_content">
                    <br />
                    <form asp-controller="Narucilac" asp-action="DodajSave" method="post" id="demo-form2" data-parsley-validate class="form-horizontal form-label-left">
                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" asp-for="ImePrezime">
                                Ime i prezime:
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input asp-for="ImePrezime" class="form-control" />
                                <span asp-validation-for="ImePrezime"></span>
                            </div>

                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" asp-for="KorisnickoIme">
                                Korisničko ime:
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input asp-for="KorisnickoIme" class="form-control" />
                                <span asp-validation-for="KorisnickoIme"></span>

                            </div>

                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" asp-for="Lozinka">
                                Lozinka:
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input asp-for="Lozinka" class="form-control" />
                                <span asp-validation-for="Lozinka"></span>

                            </div>

                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" asp-for="Email">
                                Email:
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input asp-for="Email" type="email" class="form-control" />
                                <span asp-validation-for="Email"></span>

                            </div>

                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" asp-for="Telefon">
                                Telefon:
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input asp-for="Telefon" class="form-control" />
                                <span asp-validation-for="Telefon"></span>

                            </div>

                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" asp-for="Adresa">
                                Adresa:
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <input asp-for="Adresa" class="form-control" />
                                <span asp-validation-for="Adresa"></span>

                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-3 col-sm-3 col-xs-12" for="Grad">
                                Grad:
                            </label>
                            <div class="col-md-6 col-sm-6 col-xs-12">
                                <select asp-for="GradId" asp-items="Model.gradLista" class="form-control">
                                    <option value="" disabled hidden selected>(Odaberi grad)</option>
                                </select>
                                <span asp-validation-for="GradId"></span>
                            </div>
                        </div>
                        <br />
                        <br />

                        <div class="form-group">
                            <div class="col-md-9  text-right">
                                <button type="reset" class="btn btn-primary" onclick="myFunction()">Resetiraj</button>
                                <button type="submit" class="btn btn-success" onclick="myFunction2()">Registriraj se</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="clearfix"></div>


    <br />
    <br />
    <br />
    <br />

    <center>
        <div>
            <h1><i class="fas fa-hamburger"></i> eRestoran</h1>
            <p>©2019 All Rights Reserved. eRestoran!</p>
        </div>
    </center>
</body>

</html>

<script>
    function myFunction() {
        alert("Resetirali ste prijavu");
    }

    function myFunction2() {
        alert("Uspjesno ste se registrirali, prijavite se za nastavak!");
    }
</script>