@model WebApplication1.Models.ViewModels.Login.LoginVM
@{
    Layout = null;
    string error_poruka = (string)TempData["error_poruka"];
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Prijava na sistem </title>

    <link rel='stylesheet' href='https://use.fontawesome.com/releases/v5.7.0/css/all.css' integrity='sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ' crossorigin='anonymous'>


    <!-- Bootstrap -->
    <link href="~/vendors/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <!-- NProgress -->
    <link href="~/vendors/nprogress/nprogress.css" rel="stylesheet">
    <!-- Animate.css -->
    <link href="~/vendors/animate.css/animate.min.css" rel="stylesheet">


    <!-- Custom Theme Style -->
    <link href="~/build/css/custom.min.css" rel="stylesheet">
</head>

<body class="login">
    <div>
        <a class="hiddenanchor" id="signup"></a>
        <a class="hiddenanchor" id="signin"></a>

        <div class="login_wrapper">
            <div class="animate form login_form">
                <section class="login_content">
                    <form asp-action="Login">
                        <h1>Prijava na sistem</h1>
                        <div>
                            <input asp-for="KorisnickoIme" class="form-control" placeholder="Korisničko ime" autofocus />
                            <span asp-validation-for="KorisnickoIme" class="text-danger"></span>
                        </div>
                        <div>
                            <input asp-for="Lozinka" class="form-control" placeholder="Lozinka" />
                            <span asp-validation-for="Lozinka" class="text-danger"></span>
                        </div>

                        <div>
                            <input asp-for="ZapamtiPassword" /> Zapamti password

                        </div>
                        <div>
                            <input style="margin-left:40%; margin-top:10px;" type="submit" class="btn btn-default" value="Prijava" />
                        </div>

                        <div class="clearfix"></div>


                        <br />
                        <div>
                            <a style="color:red; font-size: 20px" asp-controller="Narucilac" asp-action="Dodaj">Niste registrovani?</a>
                        </div>
                        <div>
                            <h1><i class="fas fa-hamburger"></i> eRestoran</h1>
                            <p>©2019 All Rights Reserved. eRestoran!</p>
                        </div>
                    </form>
                    @if (error_poruka!= null)
                    {
                        <br />
                        <div class="alert alert-danger">
                            @error_poruka
                        </div>
                    }
                </section>
            </div>

        </div>
    </div>
</body>
</html>


